<h1> New Task </h1>

<% if @todo.errors.any? %>
    <div style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 20px;">
        <h4><%= pluralize(@todo.errors.count, "error") %> prohibited this task from being saved:</h4>
        <ul>
            <% @todo.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @todo do |form| %>

    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :completed %>
        <%= form.check_box :completed %>
    </div>

    <div>
        <%= form.label :start_time %>
        <%= form.datetime_local_field :start_time %>
    </div>

    <div>
        <%= form.label :end_time %>
        <%= form.datetime_local_field :end_time %>
    </div>

    <div>
        <br>
        <%=form.submit "Create Task" %>
    </div>

<% end %>

<br>
<a href="/todos">Back to list</a>